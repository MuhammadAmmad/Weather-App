<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <com.kerer.weatherapp.widget.RobotoThinTextView
        android:id="@+id/daily_item_day_of_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:padding="2dp"
        android:text="Thu"/>

    <com.kerer.weatherapp.widget.RobotoThinTextView
        android:id="@+id/daily_item_temperature_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:padding="2dp"
        android:text="22 / 12" />

    <com.kerer.weatherapp.widget.WeatherTextView
        android:id="@+id/daily_item_weather_ico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:textSize="28dp"
        android:text="h" />


</LinearLayout>